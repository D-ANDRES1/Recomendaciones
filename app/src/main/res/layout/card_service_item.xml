<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp">

        <FrameLayout
            android:id="@+id/imageContainer"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <View
                android:id="@+id/gradientBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_default"/>

            <ImageView
                android:id="@+id/serviceImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:padding="10dp"
                android:contentDescription="@string/content_description_service_image" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ratingBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#10B981"
                app:cardCornerRadius="12dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/ratingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
            </com.google.android.material.card.MaterialCardView>

            <ImageButton
                android:id="@+id/favoriteButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="top|start"
                android:layout_margin="8dp"
                android:background="@drawable/circle_white_bg"
                android:src="@drawable/ic_heart_outline"
                android:scaleType="centerInside"
                android:padding="6dp"
                android:contentDescription="@string/content_description_favorite_button" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvServiceName" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Nombre del Servicio"/>

            <TextView
                android:id="@+id/tvServiceCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                android:textColor="#6B7280"
                tools:text="Categoría"/>

            <TextView
                android:id="@+id/tvServiceAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:drawableStartCompat="@drawable/ic_location_sized"
                android:drawablePadding="4dp"
                app:drawableTint="#9CA3AF"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="#9CA3AF"
                android:textSize="13sp"
                tools:text="Dirección del servicio"/>

            <RatingBar
                android:id="@+id/rbServiceRating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:numStars="5"
                android:stepSize="0.1"
                />

            <TextView
                android:id="@+id/serviceDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:textColor="#10B781"
                android:textStyle="bold"
                tools:text="A 1.2 km"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
